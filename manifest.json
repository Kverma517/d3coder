{
  "name": "d3coder", 
  "version": "0.4.2",
  "description": "Encoding/Decoding Plugin for various types of encoding like base64, rot13 or unix timestamp conversion",
  "options_page": "html/menu.html",
  "permissions": ["contextMenus","notifications","tabs","http://*/*"],
  "background_page": "html/background.html",
  "icons": { 
	"16":	"images/icon16.png",
	"48":	"images/icon48.png",
	"128":	"images/icon128.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/content.css"],
      "js": ["js/mootools.js", "js/contentWorker.js"],
      "all_frames": true
    }]
}
